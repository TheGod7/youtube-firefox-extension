{
  "manifest_version": 3,
  "name": "Youtube Converter",
  "version": "1.0",
  "description": "Convert any video in youtube to mp3 or mp4",
  "icons": {
    "48": "icons/ico.png"
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "activeTab",
    "*://localhost/*",
    "downloads",
    "scripting"
  ],
  "host_permissions": ["http://*/*", "https://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["youtube.js"]
    }
  ]
}
